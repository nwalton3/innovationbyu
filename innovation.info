name = Creativity, Innovation, and Design
description = Drupal subtheme of BYU theme for CID group
screenshot  = screenshot.png
version		= 1.0
core        = 7.x
base theme = byu

; STYLESHEETS
stylesheets[screen][] = css/innovation.css

regions[help]        	= Help
regions[feature]        = Featured Content
regions[content]        = Content
regions[sidebar_left]   = Left sidebar
regions[sidebar_right]  = Right sidebar
regions[footer]         = Footer
regions[copyright]      = Copyright

; The page_top and page_bottom regions are hidden, which means they will not
; show up on the blocks administration page. But they are required in order for the html.tpl.php to work properly, so do not delete them.

regions[page_top]       = Page top
regions[page_bottom]    = Page bottom
regions_hidden[]        = help

; Various page elements output by the theme can be toggled on and off. The "features" control which of these check boxes display on the admin/appearance config page.

features[] = name
features[] = logo
features[] = favicon
features[] = main_menu
features[] = secondary_menu

; To make this sub-theme an admin theme with shortcut links next to titles, uncomment the line below.
;settings[shortcut_module_link]    = 1